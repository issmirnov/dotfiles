############################################################
# Variables
############################################################

###
### Custom Defines
###
appname="memory"
#time="${BLOCK_INSTANCE:-%H:%M}"
format=" {used} {uunit}"


###
### Thresholds
###

# Enable
has_threshold=1

# Depending on the conditions in your custom_action()
# you can force the output to be critical or warning
# Set these vars to 1 (in custom_action)
force_crit=0
force_warn=0
force_good=0


###
### Additional arguments
###
arg_params=(
)
arg_vars=(
)
arg_desc_val=(
)
arg_desc_long=(
)


###
### Format placeholders
###

# bash variable names
format_vars=(
	used
	free
	total
	pused
	pfree
	uunit
	funit
	tunit
)

# Format placeholders
format_nodes=(
	"{used}"
	"{free}"
	"{total}"
	"{pused}"
	"{pfree}"
	"{uunit}"
	"{funit}"
	"{tunit}"
)

# Format description (for help display)
format_descs=(
	"Used memory"
	"Free memory"
	"Total memory"
	"Percent of used memory"
	"Percent of free memory"
	"Unit of used memory (K, M, G...)"
	"Unit of free memory (K, M, G...)"
	"Unit of total memory (K, M, G...)"
)

# Format examples (for help display)
format_examples=(
	"-f \" {used} {punit}\""
	"-f \"RAM: {used} {punit} of {total} {tunit} ({pused}%)\""
)


############################################################
# custom_actio function
############################################################

###
### Evaluate disk space
###
custom_action() {
	local _dump
	_dump="$( free | grep 'Mem' || true )"

	total="$( echo "${_dump}" | awk '{printf("%.2f\n", $2/(1024*1024))}' )"
	free="$(  echo "${_dump}" | awk '{printf("%.2f\n", $7/(1024*1024))}' )"
	used="$(  awk -v total="${total}" -v free="${free}" 'BEGIN {printf("%.2f\n", total-free)}' )"
	pused="$( awk -v total="${total}" -v used="${used}" 'BEGIN {printf("%0.f\n", 100*used/total)}' )"
	pfree="$( awk -v total="${total}" -v free="${free}" 'BEGIN {printf("%0.f\n", 100*free/total)}' )"
	uunit="G"
	funit="G"
	tunit="G"
}




